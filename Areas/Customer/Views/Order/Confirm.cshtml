@model OrderHeader
@{
	ViewData["Title"] = "Order Confirmed";
}
<div class="background-white border mt-5">
	<div class="row">
		<div class="col-8">
			<h3 class="text-info">Order Confirmed</h3>
		</div>
		<div class="col-4 text-right pl-0">
			<a class="btn btn-success" asp-controller="Home" asp-action="Index">New Order</a>
		</div>
	</div>
	<div class="text-success mt-2 mb-4">
		Your order has been confirmed! Please see the order summary below.
	</div>
	<partial name="_IndividualOrderDetails" model="Model" />
</div>