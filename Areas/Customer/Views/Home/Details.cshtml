@model ShoppingCartItem
@using Spice.Utility
@{
	ViewData["Title"] = "Menu Item Details";
}

<h2 class="text-info my-5">Menu Item Details</h2>
<form method="post" asp-controller="Cart" asp-action="Add" asp-route-CartId="@Model.MenuItemId">
	<div class="border background-white">
		<div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>
		<div class="row">
			<div class="col-12 col-md-9 col-lg-8 order-1 order-md-0">
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="MenuItem.Name" class="col-form-label"></label>
					</div>
					<div class="col-8">
						<input asp-for="MenuItem.Name" disabled class="form-control bg-white" />
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="MenuItem.Description" class="col-form-label"></label>
					</div>
					<div class="col-8">
						<textarea asp-for="MenuItem.Description" disabled class="form-control bg-white" rows="5"></textarea>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="MenuItem.Price" class="col-form-label"></label>
					</div>
					<div class="col-8">
						<input asp-for="MenuItem.Price" disabled class="form-control bg-white" />
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="MenuItem.SubCategory.Category" class="col-form-label"></label>
					</div>
					<div class="col-8">
						<input asp-for="MenuItem.SubCategory.Category.Name" disabled class="form-control bg-white"></input>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="MenuItem.SubCategory" class="col-form-label">Sub Category</label>
					</div>
					<div class="col-8">
						<input asp-for="MenuItem.SubCategory.Name" disabled class="form-control bg-white"></input>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="MenuItem.Spicyness" class="col-form-label"></label>
					</div>
					<div class="col-8">
						<input type="text" asp-for="MenuItem.Spicyness" value="@StaticDetails.SpicynessLevels.ElementAtOrDefault(Model.MenuItem.Spicyness)" disabled class="form-control bg-white"></input>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="Count" class="col-form-label"></label>
					</div>
					<div class="col-8">
						<input asp-for="Count" class="form-control"></input>
						<span asp-validation-for="Count" class="text-danger d-block"></span>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-md-8 offset-md-4 col-12">
						<div class="row">
							<div class="col-6">
								<button class="btn btn-info btn-block">Add To Cart</button>
							</div>
							<div class="col-6">
								<a class="btn btn-success btn-block" asp-action="Index">Back To List</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-12 col-md-3 col-lg-4 mb-4 mb-md-0 order-0 order-md-1">
				<img asp-append-version="true" width="100%" src="@(Model.MenuItem.Image == null ? @"\img\" + Spice.Utility.StaticDetails.DefaultFoodImage : Model.MenuItem.Image)" />
			</div>
		</div>
	</div>
</form>

@section Scripts{
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}