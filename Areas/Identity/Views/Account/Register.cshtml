@model RegisterViewModel
@using Spice.Utility
@{
	ViewBag.title = "Register";
}

<h2 class="text-info my-5">Create Account</h2>
<form method="post" asp-action="Register">
	<div class="border background-white">
		<div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger">	</div>
		<div class="row">
			<div class="col-md-9 col-lg-6">
				<div class="form-group">
					<label asp-for="Name" class="col-form-label"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger d-block"></span>
				</div>
				<div class="form-group">
					<label asp-for="Email" class="col-form-label"></label>
					<input asp-for="Email" class="form-control" />
					<span asp-validation-for="Email" class="text-danger d-block"></span>
				</div>
				<div class="form-group">
					<label asp-for="PhoneNumber" class="col-form-label"></label>
					<input asp-for="PhoneNumber" class="form-control" />
					<span asp-validation-for="PhoneNumber" class="text-danger d-block"></span>
				</div>
				<div class="form-group">
					<label asp-for="StreetAddress" class="col-form-label"></label>
					<input asp-for="StreetAddress" class="form-control" />
					<span asp-validation-for="StreetAddress" class="text-danger d-block"></span>
				</div>
				<div class="form-group">
					<label asp-for="City" class="col-form-label"></label>
					<input asp-for="City" class="form-control" />
					<span asp-validation-for="City" class="text-danger d-block"></span>
				</div>
				<div class="form-group">
					<label asp-for="State" class="col-form-label"></label>
					<input asp-for="State" class="form-control" />
					<span asp-validation-for="State" class="text-danger d-block"></span>
				</div>
				<div class="form-group">
					<label asp-for="PostalCode" class="col-form-label"></label>
					<input asp-for="PostalCode" class="form-control" />
					<span asp-validation-for="PostalCode" class="text-danger d-block"></span>
				</div>
				<div class="form-group">
					<label asp-for="Password" class="col-form-label"></label>
					<input type="password" asp-for="Password" class="form-control" />
					<span asp-validation-for="Password" class="text-danger d-block"></span>
				</div>
				<div class="form-group">
					<label asp-for="ConfirmPassword" class="col-form-label"></label>
					<input type="password" asp-for="ConfirmPassword" class="form-control" />
					<span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>
				</div>
				@if(User.IsInRole(StaticDetails.Manager))
				{
					<div class="form-group">
						<label class="col-form-label">User Role</label><br />
						<input type="radio" name="Role" value="@StaticDetails.FrontDesk" /> Front Desk &nbsp;
						<input type="radio" name="Role" value="@StaticDetails.Kitchen" /> Kitchen &nbsp;
						<input type="radio" name="Role" value="@StaticDetails.Manager" /> Manager
					</div>
				}
				<button type="submit" class="btn btn-success px-5 my-3">Register</button>
			</div>
		</div>
	</div>
</form>

@section Scripts{
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}