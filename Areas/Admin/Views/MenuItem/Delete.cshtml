@model MenuItemViewModel
@{
	ViewData["Title"] = "Delete Menu Item";
}

<h2 class="text-info my-5">Delete Menu Item</h2>
<form method="post" asp-action="Delete" asp-route-Id="@Model.MenuItem.Id">
	<div class="border background-white">
		<div class="row">
			<div class="col-12 col-md-9 col-lg-8 order-1 order-md-0">
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="MenuItem.Name" class="col-form-label"></label>
					</div>
					<div class="col-8">
						<input asp-for="MenuItem.Name" disabled class="form-control" />
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="MenuItem.Description" class="col-form-label"></label>
					</div>
					<div class="col-8">
						<textarea asp-for="MenuItem.Description" disabled class="form-control"></textarea>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="MenuItem.Price" class="col-form-label"></label>
					</div>
					<div class="col-8">
						<input asp-for="MenuItem.Price" disabled class="form-control" />
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="MenuItem.SubCategory.Category.Name" class="col-form-label">Category</label>
					</div>
					<div class="col-8">
						<input asp-for="MenuItem.SubCategory.Category.Name" disabled class="form-control"></input>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="MenuItem.SubCategory.Name" class="col-form-label">Sub Category</label>
					</div>
					<div class="col-8">
						<input asp-for="MenuItem.SubCategory.Name" disabled class="form-control"></input>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="MenuItem.Spicyness" class="col-form-label"></label>
					</div>
					<div class="col-8">
						<input type="text" asp-for="MenuItem.Spicyness" value="@StaticDetails.SpicynessLevels.ElementAtOrDefault(Model.MenuItem.Spicyness)" disabled class="form-control"></input>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-md-8 col-lg-8 offset-md-4 col-12">
						<partial name="_DeleteAndBackToListPartial" />
					</div>
				</div>
			</div>
			<div class="col-12 col-md-3 col-lg-4 mb-4 mb-md-0 order-0 order-md-1">
				<img asp-append-version="true" width="100%" src="@(Model.MenuItem.Image == null ? @"\img\" + Spice.Utility.StaticDetails.DefaultFoodImage : Model.MenuItem.Image)" />
			</div>
		</div>
	</div>
</form>