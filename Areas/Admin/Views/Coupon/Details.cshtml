@model Coupon
@{
	ViewData["Title"] = "Coupon Details";
}

<h2 class="text-info my-5">Coupon Details</h2>
<div class="border background-white">
	@if(Model.Image != null)
	{
		<img class="mb-4" width="100%" src="data:image;base64, @Convert.ToBase64String(Model.Image)" />
	}
	<div class="form-group row">
		<div class="col-md-3 col-4">
			<label asp-for="Name" class="col-form-label"></label>
		</div>
		<div class="col-md-9 col-lg-5 col-8">
			<input asp-for="Name" disabled class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-3 col-4">
			<label asp-for="Type" class="col-form-label"></label>
		</div>
		<div class="col-md-9 col-lg-5 col-8">
			<select asp-for="Type" asp-items="Html.GetEnumSelectList<Coupon.EType>()" disabled class="form-control"></select>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-3 col-4">
			<label asp-for="Discount" class="col-form-label"></label>
		</div>
		<div class="col-md-9 col-lg-5 col-8">
			<input asp-for="Discount" disabled class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-3 col-4">
			<label asp-for="MinimumAmount" class="col-form-label">Minimum Amount</label>
		</div>
		<div class="col-md-9 col-lg-5 col-8">
			<input asp-for="MinimumAmount" disabled class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-3 col-4">
			<label asp-for="IsActive" class="col-form-label">Active Status</label>
		</div>
		<div class="col-md-9 col-lg-5 col-8">
			<input type="checkbox" disabled asp-for="IsActive" style="vertical-align:bottom;"/>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-9 col-lg-5 offset-md-3 col-12">
			<partial name="_DetailsAndBackToListPartial" model="Model.Id" />
		</div>
	</div>
</div>