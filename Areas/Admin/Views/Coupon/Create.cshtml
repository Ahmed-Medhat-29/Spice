@model Coupon
@{
	ViewData["Title"] = "Create Coupon";
}

<h2 class="text-info my-5">Create Coupon</h2>
<form method="post" asp-action="Create" enctype="multipart/form-data">
	<div class="border background-white">
		<div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger">	</div>
		<div class="form-group row">
			<div class="col-md-3 col-4">
				<label asp-for="Name" class="col-form-label"></label>
			</div>
			<div class="col-md-9 col-lg-5 col-8">
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger d-block"></span>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-md-3 col-4">
				<label asp-for="Type" class="col-form-label"></label>
			</div>
			<div class="col-md-9 col-lg-5 col-8">
				<select asp-for="Type" asp-items="Html.GetEnumSelectList<Coupon.EType>()" class="form-control"></select>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-md-3 col-4">
				<label asp-for="Discount" class="col-form-label"></label>
			</div>
			<div class="col-md-9 col-lg-5 col-8">
				<input asp-for="Discount" class="form-control" />
				<span asp-validation-for="Discount" class="text-danger d-block"></span>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-md-3 col-4">
				<label asp-for="MinimumAmount" class="col-form-label"> Minimum Amount</label>
			</div>
			<div class="col-md-9 col-lg-5 col-8">
				<input asp-for="MinimumAmount" class="form-control" />
				<span asp-validation-for="MinimumAmount" class="text-danger d-block"></span>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-md-3 col-4">
				<label asp-for="IsActive" class="col-form-label">Active Status</label>
			</div>
			<div class="col-md-9 col-lg-5 col-8">
				<input type="checkbox" asp-for="IsActive" style="vertical-align:bottom;" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-md-3 col-4">
				<label asp-for="Image" class="col-form-label"></label>
			</div>
			<div class="col-md-9 col-lg-5 col-8">
				<input type="file" name="file" class="form-control-file" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-md-9 col-lg-5 offset-md-3 col-12">
				<partial name="_CreateAndBackToListPartial" />
			</div>
		</div>
	</div>
</form>

@section Scripts{
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}