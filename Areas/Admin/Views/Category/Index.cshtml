@model IEnumerable<Category>
@{
	ViewData["Title"] = "Categories";
}

<div class="mt-5 border background-white">
	<div class="row mb-4">
		<div class="col-6">
			<h3 class="text-info" style="font-size: 1.68rem;">Category List</h3>
		</div>
		<div class="col-6 text-right">
			<partial name="_CreateButtonPartial" />
		</div>
	</div>
	@if(Model.Any())
	{
		<table class="table table-striped border mb-0">
			<tr class="table-secondary">
				<th>Name</th>
				<th></th>
			</tr>
			@foreach(var category in Model)
			{
				<tr>
					<td>
						@category.Name
					</td>
					<td>
						<div class="float-right">
							<partial name="_TableButtonPartial" model="@category.Id" />
						</div>
					</td>
				</tr>
			}
		</table>
	}
	else
	{
		<h4 class="text-center">No Categories Exist</h4>
	}
</div>