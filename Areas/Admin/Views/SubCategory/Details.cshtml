@model SubCategory
@{
	ViewData["Title"] = "Sub Category Details";
}

<h2 class="text-info my-5">Sub Category Details</h2>
<div class="border background-white">
	<div class="form-group row">
		<div class="col-md-2 col-4">
			<label asp-for="Category.Name" class="col-form-label">Category</label>
		</div>
		<div class="col-md-6 col-lg-5 col-8">
			<input asp-for="Category.Name" disabled class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-2 col-4">
			<label asp-for="Name" class="col-form-label"></label>
		</div>
		<div class="col-md-6 col-lg-5 col-8">
			<input asp-for="Name" disabled class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-6 col-lg-5 offset-md-2 col-12">
			<partial Name="_DetailsAndBackToListPartial" model="@Model.Id" />
		</div>
	</div>
</div>