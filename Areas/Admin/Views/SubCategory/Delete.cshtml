@model SubCategory
@{
	ViewData["Title"] = "Delete";
}

<h2 class="text-info my-5">Delete Sub Category</h2>
<form method="post" asp-action="Delete" asp-route-Id="@Model.Id">
	<div class="border background-white">
		<div class="form-group row">
			<div class="col-md-2 col-4">
				<label asp-for="Category.Name" class="col-form-label">Category</label>
			</div>
			<div class="col-md-6 col-lg-5 col-8">
				<input asp-for="Category.Name" disabled class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-md-2 col-4">
				<label asp-for="Name" class="col-form-label"></label>
			</div>
			<div class="col-md-6 col-lg-5 col-8">
				<input asp-for="Name" disabled class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-md-6 col-lg-5 offset-md-2 col-12">
				<partial Name="_DeleteAndBackToListPartial" />
			</div>
		</div>
	</div>
</form>